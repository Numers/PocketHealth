#import "CalculateIndex.h"
#import <math.h>

@implementation CalculateIndex
+(float)calculateMood:(float)pmValue
{
    float value;
    @try {
        value = 99 - 0.3244 * pmValue + 3.4 * pow(10, -4) * pow(pmValue, 2) - 1.587 * pow(10, -7) * pow(pmValue, 3);
        if (value < 0.f) {
            value = 0.f;
        }
        
        if (value > 99.0f) {
            value = 99.0f;
        }
    }
    @catch (NSException *exception) {
        value = 0.0f;
    }
    @finally {
        
    }
    return value;
}

+(float)calculateActivity:(NSInteger)steps
{
    float value;
    @try {
        if (steps < 20000) {
            value = 0.02289 * steps - 1.655 * pow(10, -6) * pow(steps, 2) + 3.618 * pow(10, -11) * pow(steps, 3);
        }else{
            value = 87.24 - 0.0001 * steps;
        }
        if (value < 0.f) {
            value = 0.f;
        }
        
        if (value > 99.0f) {
            value = 99.0f;
        }
    }
    @catch (NSException *exception) {
        value = 0.0f;
    }
    @finally {
        
    }
    return value;
}

+(float)calculateSleep:(NSInteger)sleepMinites WithSleepHour:(NSInteger)hour
{
    float value;
    @try {
        float value1 = 12.38 * sleepMinites + -0.9226 * pow(sleepMinites, 2) + 0.0181 * pow(sleepMinites, 3);
        if(value1 < 0.f){
            value1 = 0.f;
        }
        
        if (value1 > 50.f) {
            value1 = 50.f;
        }
        float value2 = 49 - 6.406 * hour + 0.137 * pow(hour, 2) + 0.005415 * pow(hour, 3);
        if(value2 < 0.f){
            value2 = 0.f;
        }
        
        if (value2 > 50.f) {
            value2 = 50.f;
        }
        
        value = value1 + value2;
        if (value < 0.f) {
            value = 0.f;
        }
        
        if (value > 99.0f) {
            value = 99.0f;
        }
    }
    @catch (NSException *exception) {
        value = 0.0f;
    }
    @finally {
        
    }
    return value;
}
@end
