                    UITableViewCell *cell = [tableView dequeueReusableCellWithIdentifier:identifyStr];
                    if (cell == nil) {
                        cell = [[UITableViewCell alloc] initWithStyle:UITableViewCellStyleDefault reuseIdentifier:identifyStr];
