@implementation PHGroupPersonalInfoCellHeaderViewController

- (void)viewDidLoad {
    [super viewDidLoad];
//    self.addFriendLabelNickName.text= gmember.nickName;
//    self.addFriendLabelLocation.text = gmember.location;
    //直接进行http请求 查询用户详情
