                case 0:
                    break;
                case 1:
                    break;
                default:
                    break;
            }
            break;
        case 1:
            switch (indexPath.row) {
                case 0:
                {
                    PHUserCenterInputPhysicalExamViewController *phUserCenterInputPhysicalExamVC = [[PHUserCenterInputPhysicalExamViewController alloc] init];
