typedef unsigned long long UID;

typedef struct __sync_t{
	UID uid;
	char token[16];
	char synckey[14];
}sync_t;


typedef struct __sync_res_t{
	char newsynckey[14];
	short zipflag; //0表示未压缩，1表示gzip压缩
	int length;
	//后续变长数据
}sync_res_t;



typedef struct __sendmsg_t{
	UID uid;
	char token[16];
	UID touid;
	int msgsn;
	int msgtype;
	int msglength;
	//后续msg内容
}sendmsg_t;

typedef struct __sendmsg_res_t{
	int retcode;
	int msgtype;
	int msgsn;
	int length;
	//后续返回内容
}sendmsg_res_t;


